{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es3",
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "dist-esm",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}